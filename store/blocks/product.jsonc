{
  "store.product": {
    "children": [
      "rich-text#blank",
      "flex-layout.row#product-breadcrumb",
      "flex-layout.row#product-main"
    ]
  },

  "flex-layout.row#product-breadcrumb": {
    "props": {
      "marginTop": 20
    },
    "children": ["breadcrumb"]
  },

  "flex-layout.row#product-main": {
    "children":[
      "flex-layout.col#product-image",
      "flex-layout.col#product-main"
    ],
    "props":{
      "blockClass": "product-main"
    }
  },

  "flex-layout.col#product-image": {
    "props": {
      "blockClass": "product-main"
    },
    "children": [
      "product-images"
    ]
  },

  "flex-layout.col#product-main": {
    "props": {
      "blockClass": "product-main"
    },
    "children": [
      "vtex.store-components:product-name",
      "product-description",
      "product-identifier.product",
      "product-price#product-details",
      "flex-layout.row#buy-button"
    ]
  },

  "product-price#product-details": {
    "props": {
      "showSavings": true,
      "showListPrice": true,
      "showInstallments": true
    }
  },

  "flex-layout.row#buy-button": {
    "children": [
      "buy-button"
    ]
  },

  "product-images": {
    "props": {
      "displayThumbnailsArrows": true,
      "thumbnailsOrientation": "horizontal",
      "zoomMode": "disabled",
      "blockClass": "product-image"
    }
  },

  "product-description": {
    "props": {
      "showTitle": true,
      "collapseContent": false,
      "blockClass": "description"
    }
  },

  "product-identifier.product": {
    "props": {
      "blockClass": "identifier"
    }
  },

  "vtex.store-components:product-name": {
    "props": {
      "blockClass": "name"
    }
  },

  "rich-text#blank": {
    "props":{
      "text": ".",
      "textColor": "c-on-base"
    }
  }

}